{
  "name": "@paraboly/react-native-card",
  "version": "1.0.0",
  "description": "Fully customizable Card View for React Native.",
  "keywords": [
    "card-view",
    "freakycoder",
    "kuray",
    "react-native",
    "icons",
    "javascript",
    "ui-lib",
    "simple-card",
    "simple",
    "rn",
    "card",
    "view"
  ],
  "homepage": "https://www.paraboly.com",
  "bugs": "https://github.com/Paraboly/react-native-card/issues",
  "main": "./lib/src/index.js",
  "repository": "git@github.com:Paraboly/react-native-card.git",
  "author": "FreakyCoder <kurayogun@paraboly.com>",
  "license": "MIT",
  "peerDependencies": {
    "@freakycoder/react-native-helpers": ">= 0.1.2",
    "react": ">= 16.x",
    "react-native": ">= 0.55.x",
    "react-native-material-ripple": ">= 0.8.x",
    "react-native-dynamic-vector-icons": ">= x.x.x"
  },
  "scripts": {
    "build": "cd lib && tsc && cp ../package.json ../build/dist/ && Echo Build completed!",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/react": "^16.9.53",
    "@types/react-native": "^0.63.25",
    "react-native-typescript-transformer": "^1.2.13",
    "typescript": "^4.0.3",
    "@react-native-community/eslint-config": "^2.0.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.js --fix-dry-run"
    ]
  }
}
